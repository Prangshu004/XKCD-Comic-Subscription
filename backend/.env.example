# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Brevo Email Configuration
BREVO_API_KEY=your_brevo_api_key_here
FROM_EMAIL=your_verified_sender_email@example.com

# Brevo SMTP Fallback (for when API fails)
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your_smtp_user@example.com
BREVO_SMTP_PASS=your_smtp_password

# Server Configuration
# For development: http://localhost:5173
# For Railway deployment: https://your-app-name.up.railway.app
# BACKEND_URL should match the server address
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-project-name.up.railway.app
BACKEND_URL=https://your-project-name.up.railway.app